{% extends 'partials/base.html.twig' %}

{% block content %}

    {% set avatar_bg_color = page.header.card.avatar_background_color ? 'background-color:'~ page.header.card.avatar_background_color  ~';' : '' %}

    <div class="portfolio-avatar-card mdl-card mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-shadow--4dp">
        <div class="mdl-card__title" style="background-image: url('{{page.media[page.header.card.avatar_image].url}}');  {{avatar_bg_color}}">
        </div>
        <div class="mdl-card__supporting-text">
                <h2 class="mdl-card__title-text">{{site.author.name}}</h2>
        </div>
    </div>

    {% set card_image = include('partials/card_image.html.twig',{image_width:432, image_height:132}) %}
    {% set title_color = page.header.card.title_text_color ? page.header.card.title_text_color : '#d8d8d8' %}
    {% set social_buttons = include('partials/social_buttons.html.twig') %}
    <div class="portfolio-profile-card mdl-cell mdl-cell--8-col mdl-cell--8-col-tablet mdl-card  mdl-card mdl-shadow--4dp">
            <div class="mdl-card__title" style="background-image: url({{card_image}}); height:120px;">
                    <h2 class="mdl-card__title-text" style="color: {{title_color}};">{{page.title}}</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-card--expand">
                    {{page.content}}
            </div>
            <div class="mdl-card__actions mdl-card--border">
                {{social_buttons}}
            </div>
    </div>
    {{dump(site.author)}}

{% endblock %}

