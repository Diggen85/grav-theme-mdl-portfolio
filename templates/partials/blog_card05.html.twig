{# example Image 200x200 #}
{% set card_image = include('partials/card_image.html.twig',{image_width:200, image_height:200}) %}
{% set title_color = page.header.card.title_text_color ? page.header.card.title_text_color : '#d8d8d8' %}

{% set cells = page.header.card.cells ?? 6 %}

<div class="demo-card-event mdl-cell mdl-cell--cells}}-col mdl-cell--4-col-tablet mdl-card mdl-card mdl-shadow--4dp mdl-color-text--white" style="background: url({{card_image}}) center / cover">
		<div class="mdl-card__title mdl-card--expand">
				<h4 style="color: {{title_color}};">
					{{page.title}}
				</h4>
		</div>	
		<div class="mdl-card__actions mdl-card--border">
				<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" style="color: {{title_color}};" href="{{page.header.card.action_url}}">
					{{page.header.card.action_text}}
				</a>
				<div class="mdl-layout-spacer"></div>
				<i class="material-icons" style="color: {{title_color}};">{{page.header.card.action_icon}}</i>
		</div>
</div>