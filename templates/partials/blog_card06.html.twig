{# example Image 432x132 #}
{% set card_image = include('partials/card_image.html.twig',{image_width:432, image_height:132}) %}
{% set title_color = page.header.card.title_text_color ? page.header.card.title_text_color : '#d8d8d8' %}

{% set cells = page.header.card.cells ?? 5 %}

<div class="mdl-cell mdl-cell--{{cells}}-col mdl-cell--4-col-tablet mdl-card  mdl-card mdl-shadow--4dp">
		<div class="mdl-card__title mdl-card--expand {# mdl-color-text--white #}" style="background: url({{card_image}}) center / cover; min-height:132px;">
				<h2 class="mdl-card__title-text" style="color: {{title_color}};">{{page.title}}</h2>
		</div>
		<div class="mdl-card__supporting-text">
				{{page.summary|striptags}}
		</div>
		<div class="mdl-card__actions mdl-card--border">
				<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="{{page.url}}">
					{{ "MDLPORTFOLIO.POST.READMORE"|t }}
				</a>
		</div>
</div>